@model IEnumerable<Vets.Models.Donos>

@{
    ViewBag.Title = "Index";
}

<h2>Donos</h2>

@if (User.IsInRole("Funcionario")){
<p>
    @Html.ActionLink("Criar novo dono!", "Create")
</p>

 }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DonoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DonoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @if (User.IsInRole("Funcionario")) {
                <div>
                    @Html.ActionLink("Editar", "Edit", new { id=item.DonoID }) |
                    @Html.ActionLink("Informação", "Details", new { id=item.DonoID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.DonoID })
                </div>
            }
</td>
    </tr>
}

</table>
